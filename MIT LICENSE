```python
from utils import arxiv_utils, pdf_utils
from agents import summarizer_agent, qa_agent

def run_demo():
    print("🔍 Searching arXiv for 'graph neural networks'...")
    papers = arxiv_utils.search_arxiv("graph neural networks", max_results=3)
    for i, p in enumerate(papers, 1):
        print(f"{i}. {p['title']}")

    print("\n📑 Summarizing first abstract...")
    print(summarizer_agent.summarize_text(papers[0]['summary']))

if __name__ == "__main__":
    run_demo()
